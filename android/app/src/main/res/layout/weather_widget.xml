<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/place"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:text="@string/text_place"
            android:textColor="#F8F5F5"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="0dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginRight="5dp"
                android:text="@string/time"
                android:textColor="#F1EAEA"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="21dp"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_popup_sync" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temperature"
            style="@style/widget_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:gravity="center|left"
            android:text="@string/text_temperature"
            android:textColor="#EFECEC"
            android:textSize="35dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@android:drawable/ic_menu_rotate" />

    </LinearLayout>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="@string/text_humidity"
        android:textColor="#F8F1F1"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/realfeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="@string/text_realfeel"
        android:textColor="#F8F1F1"
        android:textSize="20dp" />

</LinearLayout>